{% comment %}
  Justice Scriptures Partial
  Parameters:
  - justice_refs: Array of justice scripture references
  - margin_top: Optional margin top class (default: "mt-4")
{% endcomment %}

{% if justice_refs and justice_refs.size > 0 %}
<section class="{{ margin_top | default: 'mt-4' }}">
  <h3 class="text-base font-semibold text-gray-900 mb-2">Justice Scriptures</h3>
  <ul class="list-disc list-inside space-y-1 mb-3">
    {% for ref in justice_refs %}
      <li class="text-gray-700 text-sm">{{ ref }}</li>
    {% endfor %}
  </ul>
  <p class="text-gray-600 text-xs">These are justice-related verses that fall within today's Old Testament chapters.</p>
</section>
{% endif %}