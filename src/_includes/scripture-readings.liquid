{% comment %}
  Scripture Readings Partial
  Parameters:
  - heading: The heading text (e.g., "Old Testament", "New Testament")
  - readings: Array of scripture references
  - url: Optional URL for "Read on Bible.com" link
  - no_reading_text: Text to show when no readings (default: "No reading.")
{% endcomment %}

<section{% if margin_top %} class="{{ margin_top }}"{% endif %}>
  <h3 class="text-base font-semibold text-gray-900 mb-2">{{ heading }}</h3>
  {% if readings and readings.size > 0 %}
    <ul class="list-disc list-inside space-y-1 mb-3">
      {% for ref in readings %}
        <li class="text-gray-700 text-sm">{{ ref }}</li>
      {% endfor %}
    </ul>
  {% else %}
    <p class="text-gray-500 text-sm mb-3">{{ no_reading_text | default: "No reading." }}</p>
  {% endif %}
  
  {% if url %}
    <p><a class="text-blue-600 hover:text-blue-700 underline underline-offset-2 text-sm font-medium" href="{{ url }}" target="_blank" rel="noopener">Read on Bible.com</a></p>
  {% endif %}
</section>