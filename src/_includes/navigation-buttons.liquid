{% comment %}
  Navigation Buttons Partial
  Parameters:
  - current_number: Current day/week number
  - max_number: Maximum day/week number (default: 365 for days, 53 for weeks)
  - type: "day" or "week" for URL generation
  - back_to_text: Optional text for middle button (e.g., "Back to Week")
  - back_to_url: Optional URL for middle button
  - margin_top: Optional margin top class (default: "mt-6")
{% endcomment %}

<div class="{{ margin_top | default: 'mt-6' }} flex items-center justify-between">
  <div>
    {% if current_number > 1 %}
      {% assign prev_number = current_number | minus: 1 %}
      <a class="btn-secondary" href="/{{ type }}/{{ prev_number }}/">← Previous{% if type == "week" %} Week{% endif %}</a>
    {% endif %}
  </div>

  {% if back_to_text and back_to_url %}
    <a class="btn-secondary" href="{{ back_to_url }}">{{ back_to_text }}</a>
  {% endif %}

  <div>
    {% assign max_num = max_number | default: 365 %}
    {% if type == "week" %}
      {% assign max_num = 53 %}
    {% endif %}

    {% if current_number < max_num %}
      {% assign next_number = current_number | plus: 1 %}
      <a class="btn-primary" href="/{{ type }}/{{ next_number }}/">Next{% if type == "week" %} Week{% endif %} →</a>
    {% endif %}
  </div>
</div>