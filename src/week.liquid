---
layout: base.liquid
eleventyComputed:
  title: "Week {{ w.weekNumber }} · BibleProject Plan"
  description: "Old and New Testament readings and videos for week {{ w.weekNumber }}."
pagination:
  data: plan.weeks
  size: 1
  alias: w
permalink: "/week/{{ w.weekNumber }}/"
---
{% assign week = w %}
<header class="mb-5 md:mb-6">
  <h1 class="text-2xl md:text-[28px] font-semibold tracking-tight text-slate-900">Week {{ week.weekNumber }}{% if week.hasJustice %} <span class="align-middle text-base" title="Justice scripture present">⭐</span>{% endif %}</h1>
  <p class="mt-1 text-slate-600">Old Testament and New Testament readings for the week.</p>
  <div class="mt-2.5 flex items-center gap-3 text-sm">
    {% if week.weekNumber > 1 %}<a class="text-slate-600 hover:text-slate-900 inline-flex items-center gap-1" href="/week/{{ week.weekNumber | minus: 1 }}/">← Previous Week</a>{% endif %}
    <span class="text-slate-300">|</span>
    {% if week.weekNumber < 53 %}<a class="text-slate-600 hover:text-slate-900 inline-flex items-center gap-1" href="/week/{{ week.weekNumber | plus: 1 }}/">Next Week →</a>{% endif %}
  </div>
</header>

<div class="space-y-8">
{% for day in week.days %}
<article class="border-t border-slate-200 pt-8">
  <header class="flex items-center justify-between">
    <h2 class="text-xl font-semibold text-slate-800">
      <a href="/day/{{ day.day }}/" class="hover:underline">Day {{ day.day }}{% if day.hasJustice %} <span class="align-middle text-base" title="Justice scripture present">⭐</span>{% endif %}</a>
    </h2>
  </header>

  <section class="prose prose-slate max-w-none mt-4">
    <h3>Old Testament</h3>
    {% if day.otReadings.size > 0 %}
    <ul class="not-prose list-disc pl-5 space-y-1">
        {% for ref in day.otReadings %}
          <li class="text-slate-700">{{ ref }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="text-slate-500">No OT reading.</p>
    {% endif %}
  </section>

  {% if day.justiceRefs and day.justiceRefs.size > 0 %}
  <section class="prose prose-slate max-w-none mt-4">
    <h3>Justice Scriptures</h3>
    <ul class="not-prose list-disc pl-5 space-y-1">
      {% for ref in day.justiceRefs %}
        <li class="text-slate-700">{{ ref }}</li>
      {% endfor %}
    </ul>
    </section>
  {% endif %}

  <section class="prose prose-slate max-w-none mt-4">
    <h3>New Testament</h3>
    {% if day.ntReadings.size > 0 %}
    <ul class="not-prose list-disc pl-5 space-y-1">
        {% for ref in day.ntReadings %}
          <li class="text-slate-700">{{ ref }}</li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="text-slate-500">No NT reading.</p>
    {% endif %}
  </section>

  {% if day.videos and day.videos.size > 0 %}
  <section class="mt-6">
    <h3 class="text-base font-semibold text-slate-900 mb-2.5">Videos</h3>
    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 md:grid-cols-3 videos">
        {% for v in day.videos %}
          <div class="rounded-lg overflow-hidden shadow ring-1 ring-slate-200">
            <iframe class="w-full aspect-video" src="{{ v }}" title="BibleProject Video" allowfullscreen allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"></iframe>
          </div>
        {% endfor %}
      </div>
  </section>
  {% endif %}

</article>
{% endfor %}
</div>

<div class="mt-8 flex items-center justify-between">
  <div>
    {% if week.weekNumber > 1 %}<a class="inline-flex items-center rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" href="/week/{{ week.weekNumber | minus: 1 }}/">← Previous Week</a>{% endif %}
  </div>
  <div>
    {% if week.weekNumber < 53 %}<a class="inline-flex items-center rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 hover:bg-slate-50" href="/week/{{ week.weekNumber | plus: 1 }}/">Next Week →</a>{% endif %}
  </div>
</div>
