<!doctype html>
<html lang="en" class="h-full antialiased">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% if title %}{{ title }} · {% endif %}{{ site.title | default: "BibleProject Reading Plans" }}</title>
  <meta name="description" content="{{ description | default: site.description }}">
  <meta name="theme-color" content="#2563eb">
  <meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}">
  <meta property="og:description" content="{{ description | default: site.description }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta name="twitter:card" content="summary">
  <link rel="alternate" type="application/rss+xml" title="RSS" href="/feed.xml">
  <!-- Preload critical assets -->
  <link rel="preload" href="/assets/styles.css" as="style">
  <link rel="preload" href="/assets/app.js" as="script">
  <!-- Modern fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <!-- DNS prefetch for external resources -->
  <link rel="dns-prefetch" href="//www.youtube.com">
  <!-- Critical CSS -->
  <link rel="stylesheet" href="/assets/styles.css">
  <!-- Mobile fallback CSS for enhanced accessibility -->
  <link rel="stylesheet" href="/assets/mobile-fallback.css">
</head>
<body class="min-h-full bg-white text-gray-900 leading-relaxed antialiased selection:bg-blue-100 selection:text-blue-900">
  <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-200">
    <div class="relative mx-auto max-w-content px-4 py-4 flex items-center gap-3">
      <a href="/" class="font-semibold text-lg tracking-tight text-gray-900 hover:text-blue-600 transition-colors">BibleProject Plans</a>
      <span class="mobile-hide hidden sm:inline text-gray-500 text-sm">· OT + NT with videos</span>
      <button id="menu-button" aria-expanded="false" aria-controls="main-nav" class="ml-auto flex items-center gap-1 rounded-lg px-3 py-2 text-sm text-gray-600 ring-1 ring-gray-300 hover:ring-gray-400 sm:hidden transition-colors">
        <span>Menu</span>
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
          <path d="M2 4h12v1H2V4zm0 3.5h12v1H2v-1zM2 11h12v1H2v-1z"/>
        </svg>
      </button>
      <nav id="main-nav" class="hidden absolute top-full inset-x-4 mt-2 flex-col gap-2 rounded-xl bg-white shadow-lg border border-gray-200 px-4 py-3 text-sm sm:static sm:ml-auto sm:mt-0 sm:flex sm:flex-row sm:gap-6 sm:bg-transparent sm:shadow-none sm:border-0 sm:p-0">
        <a class="text-gray-600 hover:text-gray-900 transition-colors font-medium" href="/">Home</a>
        <a class="text-gray-600 hover:text-gray-900 transition-colors font-medium" href="/weeks/">Weeks</a>
        <a class="inline-flex items-center gap-1 rounded-lg bg-blue-600 px-4 py-2 text-white text-sm font-medium hover:bg-blue-700 transition-colors shadow-sm" href="/day/1/">Start Reading</a>
      </nav>
    </div>
  </header>
  <main class="mx-auto max-w-content px-4 py-8 md:py-12">
    {{ content }}
  </main>
  <footer class="mt-16 border-t border-gray-200 bg-gray-50">
    <div class="mx-auto max-w-content px-4 py-8 text-sm text-gray-600 flex items-center justify-between">
      <p>Built with Eleventy · Scripture data from BibleProject plans</p>
      <a class="hover:text-gray-900 transition-colors" href="/">Back to top</a>
    </div>
  </footer>
  <script src="/assets/app.js" defer></script>
  <script>
    // Register service worker for offline caching
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then(registration => console.log('SW registered:', registration))
          .catch(error => console.log('SW registration failed:', error));
      });
    }
  </script>
</body>
</html>
